     <script>
     var taskDetailCount = 0;     //no. of details in a task * no. of tasks 
     function buttonClick() {
         var x = document.getElementById("frm1");
         var text = "";
         var i;
         for (i = 1; i < x.length-1 ;i++) {
           text += x.elements[i].value + "<br>";
           taskDetailCount++;
           }
     var taskCount = (taskDetailCount/6);
       switch (taskCount){
         case 1:
           document.getElementById("demo1").innerHTML = text;
           break;
            
           case 2:
           	 if (text == document.getElementById("demo1").innerHTML) {
             		if (confirm("Alert: You have already added this task. Would you like to add it again?"))
                	document.getElementById("demo2").innerHTML = text;
             }
             else
             		document.getElementById("demo2").innerHTML = text;
             break;
           case 3:
             if (text == document.getElementById("demo1").innerHTML || text == document.getElementById("demo2").innerHTML) {
             		if (confirm("Alert: You have already added this task. Would you like to add it again?"))
                	document.getElementById("demo3").innerHTML = text;
             }
             else
             		document.getElementById("demo3").innerHTML = text;
             break;
           case 4:
             if (text == document.getElementById("demo1").innerHTML || text == document.getElementById("demo2").innerHTML || text == document.getElementById("demo3").innerHTML) {
             		if (confirm("Alert: You have already added this task. Would you like to add it again?"))
                	document.getElementById("demo4").innerHTML = text;
             }
             else
             		document.getElementById("demo4").innerHTML = text;
             break;
           case 5:
             if (text == document.getElementById("demo1").innerHTML || text == document.getElementById("demo2").innerHTML || text == document.getElementById("demo3").innerHTML || text == document.getElementById("demo4").innerHTML) {
             		if (confirm("Alert: You have already added this task. Would you like to add it again?"))
                	document.getElementById("demo5").innerHTML = text;
             }
             else
             		document.getElementById("demo5").innerHTML = text;
             break;
           case 6:
             if (text == document.getElementById("demo1").innerHTML || text == document.getElementById("demo2").innerHTML || text == document.getElementById("demo3").innerHTML || text == document.getElementById("demo4").innerHTML || text == document.getElementById("demo5").innerHTML) {
             		if (confirm("Alert: You have already added this task. Would you like to add it again?"))
                	document.getElementById("demo6").innerHTML = text;
             }
             else
             		document.getElementById("demo6").innerHTML = text;
             break;
           case 7:
             if (text == document.getElementById("demo1").innerHTML || text == document.getElementById("demo2").innerHTML || text == document.getElementById("demo3").innerHTML || text == document.getElementById("demo4").innerHTML || text == document.getElementById("demo5").innerHTML  || text == document.getElementById("demo6").innerHTML) {
             		if (confirm("Alert: You have already added this task. Would you like to add it again?"))
                	document.getElementById("demo7").innerHTML = text;
             }
             else
             		document.getElementById("demo7").innerHTML = text;
             break;
           case 8:
             if (text == document.getElementById("demo1").innerHTML || text == document.getElementById("demo2").innerHTML || text == document.getElementById("demo3").innerHTML || text == document.getElementById("demo4").innerHTML || text == document.getElementById("demo5").innerHTML  || text == document.getElementById("demo6").innerHTML || text == document.getElementById("demo7").innerHTML) {
             		if (confirm("Alert: You have already added this task. Would you like to add it again?"))
                	document.getElementById("demo8").innerHTML = text;
             }
             else
             		document.getElementById("demo8").innerHTML = text;
             break;
           case 9:
             if (text == document.getElementById("demo1").innerHTML || text == document.getElementById("demo2").innerHTML || text == document.getElementById("demo3").innerHTML || text == document.getElementById("demo4").innerHTML || text == document.getElementById("demo5").innerHTML  || text == document.getElementById("demo6").innerHTML || text == document.getElementById("demo7").innerHTML || text == document.getElementById("demo8").innerHTML) {
             		if (confirm("Alert: You have already added this task. Would you like to add it again?"))
                	document.getElementById("demo9").innerHTML = text;
             }
             else
             		document.getElementById("demo9").innerHTML = text;
             break;
           case 10:
             if (text == document.getElementById("demo1").innerHTML || text == document.getElementById("demo2").innerHTML || text == document.getElementById("demo3").innerHTML || text == document.getElementById("demo4").innerHTML || text == document.getElementById("demo5").innerHTML  || text == document.getElementById("demo6").innerHTML || text == document.getElementById("demo7").innerHTML || text == document.getElementById("demo8").innerHTML || text == document.getElementById("demo9").innerHTML) {

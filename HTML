     <script>
       function myFunction() {
         var x = document.getElementById("frm1");
         var text = "";
         var i;
         for (i = 1; i < x.length ;i++) {
           text += x.elements[i].value + "<br>";
           document.getElementById("demo1").innerHTML = text;
         }
